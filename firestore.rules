rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email != null &&
             request.auth.token.email.matches('info@vostcard.com');
    }
    
    // Food items - users can only access their own, admins can read all
    match /foodItems/{itemId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all food items
      allow list: if request.auth != null && isAdmin();
    }
    
    // Shopping list items - users can only access their own, admins can read all
    match /shoppingList/{itemId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all shopping list items
      allow list: if request.auth != null && isAdmin();
    }
    
    // Shopping lists - users can only access their own, admins can read all
    match /shoppingLists/{listId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all shopping lists
      allow list: if request.auth != null && isAdmin();
    }
    
    // User settings - users can only access their own, admins can read all
    match /userSettings/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow admins to list all user settings
      allow list: if request.auth != null && isAdmin();
    }
    
    // User items - users can only access their own, admins can read all
    match /userItems/{itemId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all user items
      allow list: if request.auth != null && isAdmin();
    }
    
    // User categories - users can only access their own, admins can read all
    match /userCategories/{categoryId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all user categories
      allow list: if request.auth != null && isAdmin();
    }

    // Analytics Events collection
    match /analyticsEvents/{eventId} {
      // Allow authenticated users to write their own analytics events
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Allow admins to read all analytics events
      allow read: if request.auth != null && isAdmin();
      
      // Allow collection-level queries for admins
      allow list: if request.auth != null && isAdmin();
    }

    // Analytics Aggregates collection
    match /analyticsAggregates/{aggregateId} {
      // Only admins can read aggregates
      allow read: if request.auth != null && isAdmin();
      
      // Allow collection-level queries for admins
      allow list: if request.auth != null && isAdmin();
    }

    // Meal Profiles - users can only access their own, admins can read all
    match /mealProfiles/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow admins to list all meal profiles
      allow list: if request.auth != null && isAdmin();
    }

    // Meal Plans - users can only access their own, admins can read all
    match /mealPlans/{planId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all meal plans
      allow list: if request.auth != null && isAdmin();
    }

    // Leftover Meals - users can only access their own, admins can read all
    match /leftoverMeals/{mealId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all leftover meals
      allow list: if request.auth != null && isAdmin();
    }

    // Unplanned Events - users can only access their own, admins can read all
    match /unplannedEvents/{eventId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admins to list all unplanned events
      allow list: if request.auth != null && isAdmin();
    }
  }
}
